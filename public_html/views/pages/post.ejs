<%- include('../partials/header.ejs') %>
<div class="max-w-3xl my-5 mx-auto flex items-center justify-between">
    <h1 class="text-3xl text-center block"><%= data.title %></h1>
    <div>
        <form action="/post/<%= data.id %>/delete" method="POST">
            <button type="submit" class="focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900">Delete</button>
        </form>
    </div>
</div>
<div class="max-w-3xl my-5 mx-auto">
    <div class="post">
        <% if (data) { %>
            <div class="each-post mb-3">
                <div class="each-post__image aspect-video">
                    <img src="<%= data.img %>" alt="">
                </div>
                <div class="each-post__content p-3 flex-1">
                    <div class="each-post__date mb-3">
                        <%= new Date(data.date).toLocaleDateString(); %>
                    </div>
                    <div class="each-post__descp">
                        <%= data.descp %>
                    </div>
                </div>
            </div>   
        <% } %>  
    </div>
</div>
<%- include('../partials/footer.ejs') %>